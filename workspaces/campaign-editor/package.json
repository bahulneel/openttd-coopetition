{
  "name": "@coopetition/campaign-editor",
  "version": "1.0.0",
  "description": "Campaign authoring tool for OpenTTD Coopetition with Nuxt 4, Tailwind 4, and shadcn-vue",
  "type": "module",
  "private": true,
  "engines": {
    "node": ">=20"
  },
  "keywords": [
    "openttd",
    "gamescript",
    "campaign",
    "authoring",
    "editor",
    "nuxt",
    "vue",
    "tailwind"
  ],
  "author": "Coopetition Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/bahulneel/openttd-coopetition.git",
    "directory": "workspaces/site"
  },
  "scripts": {
    "dev": "nuxt dev",
    "build": "nuxt build",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "dev:prepare": "nuxt prepare",
    "postinstall": "nuxt prepare",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix && prettier --write .",
    "typecheck": "nuxt typecheck",
    "build:spa": "NUXT_SPA_MODE=true nuxt generate",
    "preview:spa": "npm run build:spa && npm run preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:browser": "vitest run --browser",
    "test:browser:ui": "vitest --ui --browser",
    "test:browser:headed": "vitest run --browser --headed",
    "test:all": "npm run test:run && npm run test:browser",
    "clean": "nuxi cleanup && rm -rf .output .turbo"
  },
  "dependencies": {
    "@pinia/nuxt": "^0.11.2",
    "@tailwindcss/cli": "^4.1.13",
    "@tailwindcss/postcss": "^4.1.13",
    "@types/lodash.clonedeep": "^4.5.9",
    "@vee-validate/zod": "^4.15.1",
    "@vueuse/core": "13.9.0",
    "@vueuse/nuxt": "13.9.0",
    "browserfs": "^1.4.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "defu": "^6.1.4",
    "file-saver": "^2.0.5",
    "jszip": "^3.10.1",
    "lodash.clonedeep": "^4.5.0",
    "lucide-vue-next": "^0.543.0",
    "nanoid": "^5.1.5",
    "nuxt-nightly": "latest",
    "object-hash": "^3.0.0",
    "pinia": "^3.0.3",
    "reka-ui": "^2.5.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.13",
    "tw-animate-css": "^1.3.8",
    "vee-validate": "^4.15.1",
    "vue": "^3.5.21",
    "vue-router": "^4.5.1",
    "vue-sonner": "^2.0.8",
    "yaml": "^2.8.1",
    "zod": "*"
  },
  "devDependencies": {
    "@iconify-json/radix-icons": "^1.2.4",
    "@iconify/vue": "^5.0.0",
    "@nuxt/devtools": "^2.6.3",
    "@nuxt/eslint": "^1.9.0",
    "@nuxtjs/color-mode": "^3.5.2",
    "@types/file-saver": "^2.0.7",
    "@types/node": "^24.3.1",
    "@types/object-hash": "*",
    "@vitest/browser": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "@vue/test-utils": "^2.4.6",
    "eslint": "^9.35.0",
    "happy-dom": "^18.0.1",
    "jsdom": "^27.0.0",
    "playwright": "^1.55.0",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "shadcn-nuxt": "^2.2.0",
    "shadcn-vue": "^2.2.0",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4",
    "vue-tsc": "^3.0.6",
    "wait-on": "^8.0.5"
  }
}
